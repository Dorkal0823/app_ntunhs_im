<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="390dp"
        android:layout_height="134dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/PSS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="PSS"
            android:textSize="60sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="197dp"
        android:layout_height="389dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.341"
        android:gravity="center">

        <TextView
            android:id="@+id/player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="player"
            android:textSize="34sp" />

        <ImageButton
            android:id="@+id/imbtn_Scissors"
            android:layout_width="98dp"
            android:layout_height="100dp"
            android:layout_weight="0"
            android:background="#000000"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/scissor" />

        <ImageButton
            android:id="@+id/imbtn_Stone"
            android:layout_width="99dp"
            android:layout_height="100dp"
            android:layout_weight="0"
            android:background="#000000"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/rock" />

        <ImageButton
            android:id="@+id/imbtn_Paper"
            android:layout_width="98dp"
            android:layout_height="100dp"
            android:layout_weight="0"
            android:background="#000000"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/paper" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_Result"
        android:layout_width="337dp"
        android:layout_height="57dp"
        android:gravity="center"
        android:text="Play choose a button"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.719" />

    <!--<TextView
        android:id="@+id/text_Com"
        android:layout_width="194dp"
        android:layout_height="49dp"
        android:gravity="center"
        android:text="Wait player"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.385" /> -->

    <TextView
        android:id="@+id/COM"
        android:layout_width="195dp"
        android:layout_height="46dp"
        android:gravity="center"
        android:text="COM"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.212" />

    <ImageView
        android:id="@+id/image_Com"
        android:layout_width="109dp"
        android:layout_height="100dp"
        android:layout_weight="0"
        app:layout_constraintBottom_toTopOf="@id/text_Result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/COM"
        app:layout_constraintVertical_bias="0.446" />


</androidx.constraintlayout.widget.ConstraintLayout>